{
    "compilerOptions": {
      "composite": true,
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "declaration": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./packages",
      "types": ["node", "jest"],
      "typeRoots": [
        "node_modules/@types"
      ],
      "paths": {
        "@frontend/client/*": ["client/*"],
        "@frontend/core/*": ["core/*"]
      },
      "jsx": "react-jsx",
      "rootDir": "./packages"
    },
    "exclude": ["node_modules"]
  }